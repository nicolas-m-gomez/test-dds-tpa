{{# partial "titulo" }}
  <link rel="stylesheet" type="text/css" href="/egresos.css"> 
  <script src="/clickable-row.js"></script>
  <title>GeSoc - Presupuestos de Egresos</title>
{{/partial}}
{{# partial "subtitulo"}}
  <h2>Presupuestos de Egresos</h2>
{{/partial}}
{{# partial "barra" }}    
  {{#each opciones}}
	  <li class="nav-item"><a class="nav-link" href="{{key}}">{{this}}</a></li>
  {{/each}}
	<li class="nav-item"><a class="nav-link" href="/logout">Cerrar Sesion</a></li>
{{/partial}}
{{# partial "contenido" }}
  <div class="container bg-dark">
    <div class="btn-group">
      <a type="button" class="btn btn-dark btn-lg" href="/organizaciones/{{#organizacion}}{{codigo}}{{/organizacion}}/egresos/{{#egreso}}{{id}}{{/egreso}}" >Volver a Egreso</a>                  
      <a type="button" class="btn btn-dark btn-lg" href="/organizaciones/{{#organizacion}}{{codigo}}{{/organizacion}}/egresos/{{#egreso}}{{id}}{{/egreso}}/presupuestos/nuevo_presupuesto">Nuevo</a>
    </div>
  </div>
  <div class="container">            
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>ID</th>          
          <th>Proveedor</th>
          <th>Documento Comercial</th>
        </tr>
      </thead>
      {{#presupuestos}}   
      <tr class='clickable-row' data-href="/organizaciones/{{#organizacion}}{{codigo}}{{/organizacion}}/egresos/{{#egreso}}{{id}}{{/egreso}}/presupuestos/{{id}}">
        <td>{{id}}</td>
        <td>{{#proveedor}}{{denominacion}}{{/proveedor}}</td>
        <td>{{#documentoComercial}}{{tipoDocumento}} - {{codigo}}{{/documentoComercial}}</td>
      </tr>
      {{/presupuestos}}
    </table>            
  </div>
 {{/partial}}

{{> layout.html.hbs }}