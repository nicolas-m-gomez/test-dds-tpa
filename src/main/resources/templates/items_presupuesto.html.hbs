{{# partial "titulo" }}
  <link rel="stylesheet" type="text/css" href="/egresos.css"> 
  <script src="/clickable-row.js"></script>
  <title>GeSoc - Listado Items de Presupuestos</title>
{{/partial}}
{{# partial "subtitulo"}}
  <h2>Listado Items de Presupuestos</h2>
{{/partial}}
{{# partial "barra" }}    
  {{#each opciones}}
	  <li class="nav-item"><a class="nav-link" href="{{key}}">{{this}}</a></li>
  {{/each}}
	<li class="nav-item"><a class="nav-link" href="/logout">Cerrar Sesion</a></li>
{{/partial}}
{{# partial "contenido" }}
  <div class="container bg-dark">
    <div class="btn-group">
      <a type="button" class="btn btn-dark btn-lg" href="/organizaciones/{{#organizacion}}{{codigo}}{{/organizacion}}/egresos/{{#egreso}}{{id}}{{/egreso}}/presupuestos/{{#presupuesto}}{{id}}{{/presupuesto}}" >Volver a Presupuesto</a>                  
      <a type="button" class="btn btn-dark btn-lg" href="/organizaciones/{{#organizacion}}{{codigo}}{{/organizacion}}/egresos/{{#egreso}}{{id}}{{/egreso}}/presupuestos/{{#presupuesto}}{{id}}{{/presupuesto}}/items/nuevo_item">Nuevo</a>
    </div>
  </div>
  <div class="container">            
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>Descripci&oacute;n</th>
          <th>Moneda</th>
          <th>Precio Unitario</th>
          <th>Cantidad</th>
        </tr>
      </thead>
      {{#items_presupuesto}}   
      <tr class='clickable-row' data-href="/organizaciones/{{#organizacion}}{{codigo}}{{/organizacion}}/egresos/{{#egreso}}{{id}}{{/egreso}}/presupuestos/{{#presupuesto}}{{id}}{{/presupuesto}}/items/{{id}}">          
      <!--<a href="/organizaciones/{{#organizacion}}{{codigo}}{{/organizacion}}/egresos/{{#egreso}}{{id}}{{/egreso}}/items/{{id}}"></a>-->
        <td>{{id}}</td>
        <td>{{descripcion}}</td>
        <td>{{idMoneda}}</td>
        <td>{{precioUnitario}}</td>        
        <td>{{cantidad}}</td>        
      </tr>
      {{/items_presupuesto}}
    </table>            
  </div>
 {{/partial}}

{{> layout.html.hbs }}