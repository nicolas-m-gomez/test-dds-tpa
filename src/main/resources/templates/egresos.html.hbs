{{# partial "titulo" }}
  <link rel="stylesheet" type="text/css" href="/egresos.css">
   <script src="/clickable-row.js"></script>
  <title>GeSoc - Lista de Egresos</title>
{{/partial}}
{{# partial "subtitulo"}}
  <h2>Listado de Egresos - {{#organizacion}}{{nombreFicticio}}{{/organizacion}}</h2>
{{/partial}}
{{# partial "barra" }}    
  {{#each opciones}}
	  <li class="nav-item"><a class="nav-link" href="{{key}}">{{this}}</a></li>
  {{/each}}
	<li class="nav-item"><a class="nav-link" href="/logout">Cerrar Sesion</a></li>
{{/partial}}
{{# partial "contenido" }}
  <div class="container bg-dark">        
    <a type="button" class="btn btn-dark btn-lg" href="/organizaciones/{{#organizacion}}{{codigo}}{{/organizacion}}/egresos/nuevo_egreso">Nuevo</a>    
  </div>    
  <br>
  <div class="container">            
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>Estado</th>
          <th>Fecha</th>
          <th>Medio Pago</th>
          <th>Proveedor</th>
        </tr>
      </thead>
      {{#egresos}}   
      <tr class='clickable-row' data-href ='/organizaciones/{{#organizacion}}{{codigo}}{{/organizacion}}/egresos/{{id}}'>
        <!--<a href="/organizaciones/{{#organizacion}}{{codigo}}{{/organizacion}}/egresos/{{id}}">-->          
          <td>{{id}}</td>
          <td>{{estado}}</td>
          <td>{{fecha}}</td>
          <td>{{#medioPago}}{{tipoMedio}} - {{codigo}}{{/medioPago}}</td>
          <td>{{proveedor.denominacion}}</td>
        </a>
      </tr>
      {{/egresos}}
    </table>            
  </div>
 {{/partial}}

{{> layout.html.hbs }}